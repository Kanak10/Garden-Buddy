<form class="sign-up" action="/" method="post">
  <div class="logo">
    <img src="plant-icon2.png" alt="logo">
    <h3>Garden Buddy</h3>
  </div>

  <div class="heading">
    <h2>Get Started</h2>
    <h6>Already have account?</h6>
    <a href="#" class="toggle">Sign in</a>
  </div>
  <div class="actual-form">
    <div class="input">
      <input class="input-field" type="text" minlength="4" name="name" value="" required>
      <label>Name</label>
    </div>
    <div class="input">
      <input class="input-field" type="email" name="email" value="" required>
      <label>Email</label>
    </div>
    <div class="input">
      <input class="input-field" type="password" minlength="8" name="password" value="" required>
      <label>Password</label>
    </div>
    <input type="submit" name="" value="Signup" class="sign-btn">
    <p class="or">
    <table>
      <tr>
        <td style="width:47%">
          <hr />
        </td>
        <td style="vertical-align:middle; text-align: center">OR</td>
        <td style="width:47%">
          <hr />
        </td>
      </tr>
    </table>
    </p>
    <div class="g">

      <i class="bi bi-google"></i>
    </div>
    <p class="text">
      I agree to the <a href="#">Term of Service </a>
      signing in
    </p>

  </div>
</form>