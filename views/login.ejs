<%- include('partial/header') %>

<main>
    <div class="box">
        <div class="inner-box">
            <div class="form-box">
                <form class="sign-in" action="/" method="post">
                    <div class="logo">
                        <img src="plant-icon2.png" alt="logo">
                        <h3>Garden Buddy</h3>
                    </div>

                    <div class="heading">
                        <h2>Welcome Back</h2>
                        <h6>not registred yet?</h6>
                        <a href="#" class="toggle">Sign up</a>
                    </div>
                    <div class="actual-form">
                        <div class="input">
                            <input class="input-field" type="email" minlength="4" name="email" value="" required>
                            <label>Email</label>
                        </div>
                        <div class="input">
                            <input class="input-field" type="password" minlength="8" name="password" value="" required>
                            <label>Password</label>
                        </div>
                        <input type="submit" name="" value="login" class="sign-btn">
                        <p class="or">
                        <table>
                            <tr>
                                <td style="width:47%">
                                <hr />
                                </td>
                                <td style="vertical-align:middle; text-align: center">OR</td>
                                <td style="width:47%">
                                    <hr />
                                </td>
                            </tr>
                        </table>
                        </p>
                        <div class="g">

                            <i class="bi bi-google"></i>
                        </div>
                        <p class="text">
                            Forgotten your password or logun details? <a href="#">Get help</a>
                            signing in
                        </p>

                    </div>
                </form>
                <%- include('signup') %>
            </div>
            <div class="carousel">
                <img class="welcome" src="Welcome.svg" alt="welcome">
                <h2>Good to see you here !!</h2>
            </div>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script src="index.js" charset="utf-8"></script>
</script>  
<%- include('partial/footer') %>